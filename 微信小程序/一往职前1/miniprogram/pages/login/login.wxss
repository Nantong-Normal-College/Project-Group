.phoneNumberContainer, .passwordContainer {
  width: 90%;
  height: 80rpx;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  overflow: hidden;
}

.phoneNumberContainer {
  margin: 40rpx auto 0 auto;
}

.passwordContainer {
  margin: 30rpx auto 0 auto;
}

.phoneNumberContainer>input, .passwordContainer>input {
  width: 97%;
  height: 80rpx;
  font-size: 30rpx;
  margin-left: 3%;
}

.bindingNormal {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 40rpx auto 0 auto;
  font-size: 36rpx;
  color: #fff;
  background-color: #5d7972;
}

.bindingChecked{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 40rpx auto 0 auto;
  font-size: 36rpx;
  color: #fff;
  background-color: #5ba7a3;
}

.registerContainer {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #5ba7a3;
  margin-top: 20rpx;
}